{
  "description": "RabbitMQ Client Service settings schema.",
  "properties": {
    "url": {
      "type": "string",
      "required": true
    },
    "directories": {
      "type": "object",
      "description": "Directories for storing persistent data.",
      "required": false,
      "properties": {
        "log": {
          "type": "string",
          "default": "./.dynamic/log",
          "required": true
        },
        "vendor": {
          "type": "string",
          "default": "./vendor",
          "required": true
        },
        "cache": {
          "type": "string",
          "default": "./.dynamic/cache",
          "required": true
        }
      }
    }
  }
}